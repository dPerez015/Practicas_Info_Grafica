#version 330 core

layout(pixel_center_integer) in vec4 gl_FragCoord;
//uniform int height;
uniform int width;
in vec3 vertexOriginalPos;
// Ouput data
out vec3 color;


void main(){
	
	color.x=0+abs(gl_FragCoord.x/width-(vertexOriginalPos.x+1)/2)*4;
	color.y=1-abs(gl_FragCoord.x/width-(vertexOriginalPos.x+1)/2)*4;
	color.z=0;	
	
}