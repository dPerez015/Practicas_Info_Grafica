#version 330 core

// Input vertex data, different for all executions of this shader.
layout(location = 0) in vec3 vertexPosition_modelspace;

out vec3 vertexPos;
out vec3 vertexOriginalPos;

uniform float Sinus;

void main(){
	
    gl_Position.xyz = vertexPosition_modelspace;
	vertexOriginalPos= gl_Position.xyz;
	if(gl_Position.y==0){
		if(gl_Position.x<0){
			gl_Position.x-=Sinus;
		}
		else{
			gl_Position.x+=Sinus;
		}	
	}
    vertexPos=gl_Position.xyz;

	gl_Position.w = 1.0;
	
}

